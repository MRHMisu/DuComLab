@model IEnumerable<BusinessLayer.ActiveUser>

@{
    ViewBag.Title = "ViewActiveUser";
    int count = (Int32)ViewData["Count"];
}
<style>
    .table {
        width: auto;
    }

    td, th {
        text-align: center;
    }

    .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
        background-color: #93f6ea;
    }
    
    h2,h6,div{
        font-family:'Times New Roman', Times, serif;
    }

</style>

@{
    if (@count != 0)
    {
        <br />
        <h2>Current Active Users in The Cyber Center</h2>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PcName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartingTime)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PcName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartingTime)
                    </td>
                </tr>
            }

        </table>

    }
    else
    {
        <br />
        <br />
        <br />
        <br />
        <br />
        <h2 style="color:red" align="center">There is on active user right at that moment</h2>

    }

}