@model IEnumerable<BusinessLayer.Card>

@{
    ViewBag.Title = "ViewCards";
}
<br />
<style>
    p,h2, h6, div {
        font-family: 'Times New Roman', Times, serif;
    }
</style>
<h2>Generated Card List</h2>
<p>
    @Html.ActionLink("Save and Download ", "Download", null, new { @class = "btn btn-success" })
</p>
<style>
    .table {
        width: auto;
    }

    td, th {
        text-align: center;
    }

    .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
        background-color: #93f6ea;
    }
</style>
<table class="table table-striped table-bordered table-hover ">
    <tr>
        <th>
            Card Number
        </th>
        <th>
            Pin Number
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinNumber)
            </td>
        </tr>
    }

</table>
