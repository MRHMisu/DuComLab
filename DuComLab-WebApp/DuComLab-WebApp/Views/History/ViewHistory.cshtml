@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BusinessLayer.History>

@{
    ViewBag.Title = "ViewHistory";
}
<style>
    p,h2, h6, div {
        font-family: 'Times New Roman', Times, serif;
    }
</style>
<br />
<h2>Requested History</h2>

<p>
    @Html.ActionLink("Download ", "Download", null, new { @class = "btn btn-success" })
</p>
<style>
    .table {
        width: auto;
    }

    td, th {
        text-align: center;
    }

    .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
        background-color: #93f6ea;
    }
</style>

<table class="table table-striped table-bordered table-hover ">
    <tr>
        <th>
            Card Number
        </th>
        <th>
            Pc Name
        </th>
        <th>
            Starting Time
        </th>
        <th>
            Finishing Time
        </th>
        <th>
            Using Time(Seconds)
        </th>
        <th>
            Using Time(Minitues)
        </th>
        <th>
            Card Validity(Days)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PcName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsingTimeInSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsingTimeInMinitues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardValidityInDays)
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model,page=>Url.Action("ViewHistory", new { page}))
